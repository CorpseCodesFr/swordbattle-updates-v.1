{
  "name": "swordbattle.io",
  "version": "2.0.0",
  "description": "A multiplayer sword fighting game",
  "scripts": {
    "heroku-prebuild": "npm install --dev",
    "build": "webpack --config webpack/prod.js && tsc",
    "watch": "echo \"Recommend to use npm/yarn run watch:client\" && webpack --config webpack/base.js --watch --progress",
    "watch:client": "webpack --config webpack/base.js --watch --progress",
    "watch:server": "tsc -w & nodemon -q -w dist-server ./dist-server/server/server.js",
    "start-depricated": "webpack-dev-server --config webpack/base.js --open",
    "start": "tsc && node ./dist-server/server/server.js",
    "fix": "prettier --write './src/client/**/*.js' && eslint --fix './src/client/**/*.js'",
    "style": "stylelint --fix './src/client/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codergautam/swordbattle.io.git"
  },
  "keywords": [
    "phaser",
    "react",
    "multiplayer",
    "io-game",
    "io",
    "game",
    "websockets",
    "swordbattle"
  ],
  "author": "codergautam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codergautam/swordbattle.io/issues"
  },
  "homepage": "https://github.com/codergautam/swordbattle.io#readme",
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@types/intersects": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^5.2.7",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "file-loader": "^4.2.0",
    "nodemon": "^2.0.20",
    "postcss-styled": "^0.34.0",
    "prettier": "^2.6.0",
    "raw-loader": "^3.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^14.6.0",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.7.2",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "dependencies": {
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.18.6",
    "@timohausmann/quadtree-js": "^1.2.5",
    "body-parser": "^1.19.1",
    "clean-webpack-plugin": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "html-webpack-plugin": "^3.2.0",
    "intersects": "^2.7.2",
    "keyv": "4.5.0",
    "os-utils": "^0.0.14",
    "phaser": "3.55.2",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-share": "^4.4.0",
    "recaptcha-v3": "^1.10.0",
    "styled-components": "^5.3.3",
    "styled-normalize": "^8.0.7",
    "terser-webpack-plugin": "^2.2.1",
    "uWebSockets.js": "uNetworking/uWebSockets.js#v20.14.0",
    "uuid": "^3.4.0",
    "webpack": "^4.41.2",
    "webpack-merge": "^4.2.2"
  }
}
